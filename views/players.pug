extends layout

block content
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/') Blockchain Keeper
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href='/team') My Team 
                li.nav-item
                    a.nav-link(href='/matchup') Matchup
                li.nav-item.active
                    a.nav-link(href='/players') Players
                    span.sr-only (current)
                li.nav-item
                    a.nav-link(href='/league') League
                li.nav-item
                    a.nav-link(href='/trades') Trade Requests

    .col-md-12
        h1.bold Search
    .col-md-12
        form.navbar-form.navbar-left(role='search')
            .form-group
                input.form-control(type='text' placeholder='Search')
                button.btn.btn-default(type='submit') Submit

    .col-md-12
        h1.bold Available Players
    .col-md-12
        table.table
            thead
                tr
                    th Name
                    th FT%
                    th FG%
                    th 3PT
                    th PTS
                    th REB
                    th AST
                    th ST
                    th BLK
                    th TO
                    th Possible Positions
            tbody
                each player in players
                    tr
                        td=player.name
                        td=player.ftp
                        td=player.fgp
                        td=player.three
                        td=player.pts
                        td=player.reb
                        td=player.ast
                        td=player.st
                        td=player.blk
                        td=player.to
                        td=player.positions